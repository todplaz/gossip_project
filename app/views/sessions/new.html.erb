
<div class="card">
    <div class="card-body">

        <h1>Ouvrir une session:</h1>
            <p>Connecte te toi pour partager tes news!</p>

            <%= form_tag sessions_path(action: "create"), method: "post" do %>

                <%= label_tag "email:" %> </br>
                <%= text_field_tag "email", @email %>
                <br /> <br />
        
                <%= label_tag "mot de passe:" %> </br>
                <%= text_field_tag "password", @password %>
                <br /> <br />
        
                <%= submit_tag "Connecte toi!" %>
                
            <% end %>

    </div>
</div>
